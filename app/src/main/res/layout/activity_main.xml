<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/colorPrimaryDark"
        app:popupTheme="@style/AppTheme"
        android:id="@+id/toolbar"
        android:elevation="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            android:paddingEnd="16dp"
            android:paddingStart="0dp"
            >
            <ImageButton
                android:layout_height="22dp"
                android:layout_width="32dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/about_icon"
                android:layout_weight="0"
                android:clickable="true"
                android:focusable="true"
                android:onClick="showAboutJamming"/>
            <TextView
                android:paddingTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textColor="#FFF"
                android:gravity="center"
                tools:text="Arisan"
                android:paddingRight="16dp"
                android:id="@+id/toolbar_text"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>
            <ImageButton
                android:layout_height="36dp"
                android:layout_width="28dp"
                android:layout_weight="0"
                android:background="@drawable/panduan"
                android:clickable="true"
                android:focusable="true"
                android:onClick="showBantuan"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="1">
    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimaryDark"
        app:itemIconTint="@color/bot_nav_color"
        app:menu="@menu/navigation"
        android:id="@+id/navigation"
        app:itemTextColor="@color/bot_nav_color"
        app:labelVisibilityMode="labeled"
        />
</LinearLayout>